pipeline
{
    agent any
    stages
    {
        stage('Build image')
        {
            steps {
				sh 'docker build -f DockerfileProfile -t mf.profile.${BUILD_NUMBER} /home/source'
            }
        }
        stage('Stop container')
        {
            steps {
                script{
                    def containerId = sh (script: 'docker ps -q -f name=mf.profile', returnStdout: true)

                    if(containerId != ''){
                        sh "docker stop ${containerId}"
                    }
                }
            }
        }
        stage('Run container')
        {
            steps {
				sh 'docker run -d -p 82:80 --name=mf.profile.${BUILD_NUMBER} --restart=always mf.profile.${BUILD_NUMBER}'
            }
        }
    }
}
pipeline
{
    agent any
    stages
    {
        stage('Download source')
        {
            steps {
                script {
                    res = sh(script: "test -d /home/source && echo '1' || echo '0' ", returnStdout: true).trim()
                    if(res=='1'){
                        sh 'rm -R /home/source'
                    }
                }

				sh 'git clone https://github.com/mistek131995/Freedom.MF.Monorepository.git /home/source'
            }
        }

        stage('Start any pipline')
        {
            steps {
                build job: 'MF.Host', parameters: []
                build job: 'MF.AppCatalog', parameters: []
            }
        }

        stage('Clear images') {
            steps {
                sh "docker system prune -af"
            }
        }
    }
}